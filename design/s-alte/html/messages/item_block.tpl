<div class="panel panel-flat">    <div class="panel-heading">        <h6 class="panel-title"><i class="icon-bubbles3 position-left"></i> Всі переписки<a class="heading-elements-toggle"><i class="icon-more"></i></a></h6>    </div>    <ul class="media-list media-list-linked chat-stacked messages-item">        {foreach $items as $i}        <li class="media block_item">            <a href="/profile/messages/{$i->subject_id}" class="media-link {if $i->subject_id==$subject->id}active{/if}">                <div class="media-left">                {if $i->countmessage>0}<span class="badge bg-danger-400 media-badge">{$i->countmessage}</span>{/if}                {if $i->image && ($i->community_id>0)}                    <img src="files/community/{$i->image}" class="img-sm img-circle" alt="">                {elseif $i->image}                    <img src="files/profile/users/{$i->user_id}/{$i->image}" class="img-sm img-circle" alt="">                {else}                    <img src="design/{$settings->theme|escape}/assets/images/placeholder.jpg" class="img-sm img-circle" alt="">                {/if}                </div>                <div class="media-body">                    <div class="media-heading"><span class="text-semibold">{$i->title}</span> {*<span class="media-annotation pull-right">Just now</span>*} </div>                    <span class="text-muted">{$i->surname} {$m->username|mb_substr:0:1}.: {$i->text|truncate:100}</span>                </div>            </a>        </li>        {/foreach}    </ul></div><script>    var block_item = parseInt($(".messages-item .active").offset().top);    var block_messages_item = parseInt($(".messages-item")[0].scrollHeight) + 100;    //console.log(block_h);    $(".messages-item").scrollTop(block_item-300);</script>