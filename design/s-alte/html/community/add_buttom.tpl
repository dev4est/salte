{if $community->is_user===0}    <span>Ваш запит в обробці</span>{elseif $community->is_user==1}    <span>Ви учасник спільноти</span>{else}    <a href="#" id="enter-community" data-id="{$community->id}" data-session="{$smarty.session.id}" class="btn bg-success-400 btn-block" style="background-color: #1c983e;">Приєднатися до спільноти <i class="icon-plus2 position-right"></i></a>{/if}{literal}<script>    $("#enter-community").click(function () {        var id = $(this).data('id');        var session_id = $(this).data('session');        $.ajax({            url: "/community/newuser",            data: {id:id, session_id:session_id},            dataType: 'json',            method:'post',            success: function(data){                $("#adduser-btm").html('').html(data);            }        });        return false;    });</script>{/literal}