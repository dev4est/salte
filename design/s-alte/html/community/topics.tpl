<div class="panel-group panel-group-control panel-group-control-right">{foreach $topics as $t}        <div class="panel panel-white">            <div class="panel-heading">                <h6 class="panel-title">                    <a class="collapsed" data-toggle="collapse" href="#question-{$t->id}">                        <i class="icon-help position-left text-slate"></i> {$t->name}                    </a>                </h6>            </div>            <div id="question-{$t->id}" class="panel-collapse collapse">                <div class="panel-body">                      <p>{$t->text}</p>                </div>                <div class="panel-footer panel-footer-transparent"><a class="heading-elements-toggle"><i class="icon-more"></i></a>                    <div class="heading-elements">                        <span class="text-muted heading-text">{$t->date}</span>                        <ul class="list-inline list-inline-condensed heading-text pull-right">                            <li><a href="/topic/{$t->id}" class="btn bg-success btn-labeled-right">Детальніше</a> </li>                        </ul>                    </div>                </div>            </div>        </div>{/foreach}</div>