{assign var='nav_bar' value = 4}{include file="profile/nav_bar.tpl"}<div class="panel panel-flat">    <div class="panel-heading">        <h6 class="panel-title"><i class="icon-bubbles3 position-left"></i> Всі повідомлення<a class="heading-elements-toggle"><i class="icon-more"></i></a></h6>        <div class="heading-elements">            <ul class="icons-list">               <li><a href="/messages/create" title="Створити повідомлення"><i class="icon-pencil"></i> </a></li>                {*<li><a data-action="reload"></a></li>                <li><a data-action="close"></a></li>*}            </ul>        </div>    </div>    <ul class="media-list media-list-linked">        {foreach $messages as $m}        <li class="media" style="border-top: 1px solid #ccc;">            <a href="/profile/messages/{$m->subject_id}" class="media-link">                <div class="media-left">                   {if $m->countmessage>0}<span class="badge bg-danger-400 media-badge">{$m->countmessage}</span>{/if}                    {if $m->image}                        <img src="design/{$settings->theme|escape}/assets/images/placeholder.jpg" class="img-sm img-circle" alt="">                    {else}                    <img src="design/{$settings->theme|escape}/assets/images/placeholder.jpg" class="img-sm img-circle" alt="">                    {/if}                </div>                <div class="media-body">                    <div class="media-heading"><span class="text-semibold"></span><span>{$m->title}</span>                        {if $m->name_community}<span class="label label-success label-roundless pull-right">{$m->name_community}</span> <br />{/if}                        <span class="media-annotation pull-right" style="margin-top: 8px">{$m->date}</span>                    </div>                    <span class="label border-left-success label-striped">{$m->username} {$m->surname}: {$m->text|truncate:100}</span>                    <!--<span class="text-muted">{$m->username}: {$m->text}</span>-->                </div>            </a>        </li>        {/foreach}    </ul></div>