<div class="page-container" style="min-height:400px">    <!-- Page content -->    <div class="page-content">        <!-- Main content -->        <div class="content-wrapper">            <form id="form-organization" action="/register/organization" method="post" role="form">                <input type="hidden" name="session_id" value="{$smarty.session.id}">                <div class="panel panel-body login-form">                    <div class="text-center">                        <div class="icon-object border-success text-success"><i class="icon-users"></i></div>                        <h5 class="content-group">Організація <small class="display-block">Всі поля є обов'язковими</small></h5>                    </div>                    <div class="content-divider text-muted form-group"><span>Ваші облікові дані</span></div>                    <div class="form-group has-feedback has-feedback-left">                        <div class="form-group field-organizationform-username required  {if $errors->empty_username}has-error{/if}">                            <input type="text" value="{$o->username}" id="organizationform-username" class="form-control" name="username" autofocus="" placeholder="Назва організації" aria-required="true" aria-invalid="true">                            {if  $errors->empty_username}                                <p class="help-block help-block-error">Будь ласка, введіть назву організації</p>                            {/if}                        </div>							<div class="form-control-feedback">                            <i class="icon-user-check text-muted"></i>                        </div>                    </div>                    <div class="form-group has-feedback has-feedback-left">                        <div class="form-group field-organizationform-email required {if $errors->empty_email}has-error{/if}">                            <input type="text" value="{$o->email}" id="organizationform-email" class="form-control" name="email" autofocus="" placeholder="Email" aria-required="true">                            {if  $errors->empty_email}                                <p class="help-block help-block-error">Будь ласка, введіть email</p>                            {/if}                        </div>							<div class="form-control-feedback">                            <i class="icon-envelop3 text-muted"></i>                        </div>                    </div>                    <div class="form-group has-feedback has-feedback-left">                        <div class="form-group field-organizationform-password required {if  $errors->empty_password}has-error{/if}">                            <input type="password" value="{$o->password}" id="organizationform-password" class="form-control" name="password" autofocus="" placeholder="Пароль" aria-required="true">                            <p class="help-block help-block-error">{if  $errors->empty_password}                               Будь ласка, введіть пароль                            {/if}</p>                        </div>							<div class="form-control-feedback">                            <i class="icon-user-lock text-muted"></i>                        </div>                    </div>                    <div class="form-group has-feedback has-feedback-left">                        <div class="form-group field-signupform-password signupform-password-repeat required">                            <input type="password" value="{$o->password}" id="signupform-password-repeat" class="form-control" autofocus="" placeholder="Повторіть пароль" aria-required="true">                            <p class="help-block help-block-error-password">                            </p>                        </div>                        <div class="form-control-feedback">                            <i class="icon-user-lock text-muted"></i>                        </div>                    </div>                    <div class="content-divider text-muted form-group"><span>Правова форма</span></div>                    <div class="form-group has-feedback has-feedback-left">                        <div class="form-group field-organizationform-legal_form required">                            <select id="organizationform-legal_form" class="form-control" name="legal_form" autofocus="" aria-required="true">                                {foreach $legal_form as $l_f}                                <option value="{$l_f->id}">{$l_f->name}</option>                                {/foreach}                            </select>                            <p class="help-block help-block-error"></p>                        </div>                        <div class="form-control-feedback">                            <i class="icon-file-text2 text-muted"></i>                        </div>                    </div>                    <button type="submit" class="btn bg-success-400 btn-block btn-lg" name="signup-button" value=" ">Реєстрація<i class="icon-circle-right2 position-right"></i></button>                </div>            </form>        </div>        <!-- /main content -->    </div>    <!-- /page content --></div><script>    $(document).ready(function() {        $('#form-organization').submit(function(){            var pass = $("#organizationform-password").val();            var pass_rep = $("#signupform-password-repeat").val();            if (pass != pass_rep) {                $('.help-block-error-password').css('color','#ff0000');                $('.help-block-error-password').html('Паролі не співпали');                $('.signupform-password-repeat').addClass('has-error');                return false;            }            else{                $('.help-block-error-password').html('');                $('.signupform-password-repeat').removeClass('has-error');            }        });    });</script>